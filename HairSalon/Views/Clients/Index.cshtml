@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<div id=Header>
  <h1 id= HeaderText><img src='/img/logo.png' width="70px" /> Welcome to Eau Claire's Salon <img src='/img/logo.png' width="70px" /> </h1>
</div>

<div id=Nav>
  <p>@Html.ActionLink("Add a new Client", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
  <img src='/img/logo.png' width="70px" />
</div>

<div id = ClientList>
  <h1 id = HeaderText>Clients</h1>
    @if (@Model.Count == 0)
    {
      <h3>No Clients have been added yet</h3>
    }
  <ul>
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.ClientName}", "Details", new {id = client.ClientId}) | @client.Stylist.StylistName</li>
    }
  </ul>
</div>


