@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist;
<div id=Header>
  <h1 id= HeaderText>Eau Claire's Salon</h1>
</div>
<div id=nav>
  <p>@Html.ActionLink("Show all Stylists", "Index")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>
<div id=form>
  <h3 id=HeaderText>Add a new Stylist</h3>
  @using (Html.BeginForm())
  {
    <p>Sylist Name: | @Html.TextBoxFor(model => model.StylistName)</p>
    <input type="submit" value="Add Stylist" />
  }
</div>
