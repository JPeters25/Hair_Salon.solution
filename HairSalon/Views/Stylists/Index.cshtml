@{
  Layout = "_Layout";
}

@using HairSalon.Models;
<div id=Header>
<h1 id= HeaderText>Eau Claire's Salon</h1>
</div>
<div id=Nav>
  <div id=NavLinks>
  <p>@Html.ActionLink("Add new Stylist", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
  </div>
</div>
<div id=StylistList>
  <h2 id=HeaderText>Stylists</h2>
  @if (@Model.Count == 0)
  {
    <h3>No Stylists have been added yet!</h3>
  }
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
  }
</div>