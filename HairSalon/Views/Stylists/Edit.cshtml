@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist;

<div id=Header>
  <h1 id= HeaderText><img src='/img/logo.png' width="70px" /> Welcome to Eau Claire's Salon <img src='/img/logo.png' width="70px" /> </h1>
</div>
<div id=Nav>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
  <p>@Html.ActionLink("Show all Stylists", "Index")</p>
  <img src='/img/logo.png' width="70px" />
</div>
<div id=Edit>
  <h2 id=HeaderText>Edit</h2>
  <h4 id=EditName>Edit this Stylist: @Html.DisplayFor(model => model.StylistName)</h4>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.StylistId)
  
    <p>Stylist Name: @Html.EditorFor(model => model.StylistName)</p>

    <input type="submit" value="Save" />
  }
</div>
